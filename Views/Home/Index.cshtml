@{
    ViewData["Title"] = "CarServiceTracker";
}

<div class="text-center">
    <h1 class="display-5">CarServiceTracker</h1>
    <p class="lead">Track your cars and service history.</p>

    <div class="d-flex justify-content-center gap-2 mt-4">
        <a class="btn btn-primary btn-lg" asp-controller="Cars" asp-action="Index">
            Cars
        </a>
        <a class="btn btn-outline-primary btn-lg" asp-controller="ServiceRecords" asp-action="Index">
            Service Records
        </a>
    </div>

    <hr class="my-4" />

    <p class="text-muted">
        Tip: Click the service records count in Cars to filter records for a specific car.
    </p>
</div>
