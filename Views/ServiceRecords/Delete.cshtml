@model CarServiceTracker.Models.ServiceRecord

@{
    ViewData["Title"] = "Delete Service Record";
}

<h2>Delete Service Record</h2>

<h4 class="text-danger">Are you sure you want to delete this?</h4>

<hr />

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">
        @Model.Date.ToString("yyyy-MM-dd")
    </dd>

    <dt class="col-sm-2">Car</dt>
    <dd class="col-sm-10">
        @Model.Car?.Brand @Model.Car?.Model (@Model.Car?.Year)
    </dd>

    <dt class="col-sm-2">Service Type</dt>
    <dd class="col-sm-10">
        @Model.ServiceType?.Name
    </dd>

    <dt class="col-sm-2">Mileage</dt>
    <dd class="col-sm-10">
        @Model.Mileage
    </dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">
        @Model.Price.ToString("F2")
    </dd>

    @if (!string.IsNullOrWhiteSpace(Model.Notes))
    {
        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    }
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
