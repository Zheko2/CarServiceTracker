@model CarServiceTracker.Models.ServiceRecord

@{
    ViewData["Title"] = "Delete Service Record";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Car</dt>
    <dd class="col-sm-10">@Model.CarId</dd>

    <dt class="col-sm-2">Service Type</dt>
    <dd class="col-sm-10">@Model.ServiceTypeId</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

