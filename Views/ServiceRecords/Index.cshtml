@model IEnumerable<CarServiceTracker.Models.ServiceRecord>

@{
    ViewData["Title"] = "Service Records";
}

<h1>Service Records</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Car</th>
            <th>Service Type</th>
            <th>Mileage</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@(item.Car != null ? $"{item.Car.Brand} {item.Car.Model}" : item.CarId.ToString())</td>
                <td>@(item.ServiceType != null ? item.ServiceType.Name : item.ServiceTypeId.ToString())</td>
                <td>@item.Mileage</td>
                <td>@item.Price.ToString("F2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
