@model CarServiceTracker.Models.ServiceRecord

@{
    ViewData["Title"] = "Service Record Details";
}

<h2>Service Record Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">Car</dt>
        <dd class="col-sm-10">
            @Model.Car?.Brand @Model.Car?.Model (@Model.Car?.Year)
        </dd>

        <dt class="col-sm-2">Service Type</dt>
        <dd class="col-sm-10">
            @Model.ServiceType?.Name
        </dd>

        <dt class="col-sm-2">Mileage</dt>
        <dd class="col-sm-10">
            @Model.Mileage
        </dd>

        <dt class="col-sm-2">Price</dt>
        <
        <dd class="col-sm-10 fw-semibold text-success">
            €@Model.Price.ToString("F2")
        </dd>


        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <dt class="col-sm-2">Notes</dt>
            <dd class="col-sm-10">
                @Model.Notes
            </dd>
        }
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
